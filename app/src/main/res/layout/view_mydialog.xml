<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/qq_margin_D" 
    android:gravity="bottom"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/txt_mydialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:background="@drawable/actionsheet_top_normal"
        android:gravity="center"
        android:minHeight="@dimen/qq_margin_A"
        android:paddingBottom="@dimen/qq_margin_C"
        android:paddingLeft="@dimen/qq_margin_B"
        android:paddingRight="@dimen/qq_margin_B"
        android:paddingTop="@dimen/qq_margin_C"
        android:text="@string/IDS_QingXuanZe"
        android:textColor="@color/actionsheet_gray"
        android:textSize="@dimen/qq_font_A"
        android:visibility="visible" />
	
    <ListView
        android:layout_weight="1.0"
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:divider="#00000000"
        android:listSelector="@android:color/transparent" >
    </ListView>

    <TextView
        android:id="@+id/txt_mydialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qq_margin_A"
        android:layout_weight="0.0"
        android:background="@drawable/actionsheet_bottom_selector"
        android:gravity="center"
        android:text="@string/IDS_QuXiao"
        android:textColor="@color/actionsheet_blue"
        android:textSize="@dimen/qq_font_B"
        android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>