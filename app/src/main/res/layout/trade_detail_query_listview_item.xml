<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_demand"
    >

    <LinearLayout      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:baselineAligned="false"        
        android:orientation="horizontal"
        android:paddingTop="@dimen/trade_query_listview_item_padding_height"
        android:paddingBottom="@dimen/trade_query_listview_item_padding_height"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/IDS_ShiJianLiZi"
            android:textColor="@color/gray_demand_one"
            android:textSize="@dimen/font_trade_position_B" />

        <TextView
            android:id="@+id/tv_optionname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/IDS_ShangHaiDaZhong"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_position_B" />

        <LinearLayout
            android:id="@+id/linearlayout_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/IDS_BuyKai"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_position_B" />

            <TextView
                android:id="@+id/tv_type1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/IDS_SellPing"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_position_B" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linearlayout_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
            android:id="@+id/tv_weituojia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/IDS_ShuZiNum"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_position_B" />

            <TextView
                android:id="@+id/tv_beidui"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_position_B" />
        </LinearLayout>

        
         <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_position_B" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal" 
            android:visibility="visible"
            android:clickable="true"
            android:id="@+id/linearlayout_wt_state">

            <TextView
                android:id="@+id/tv_state1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/IDS_QueRenChengGong"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_position_B" />

            <TextView
                android:id="@+id/tv_state2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/IDS_CheDan"
                android:textColor="@color/blue_demand"
                android:textSize="@dimen/font_xmid_14sp" />
        </LinearLayout>
   
        <LinearLayout
            android:id="@+id/linearlayout_cj_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal" 
            android:visibility="gone"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_dealnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/IDS_ShuZiNum"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_position_B" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_demand_one" />
</RelativeLayout>