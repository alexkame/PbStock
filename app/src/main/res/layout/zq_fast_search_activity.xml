<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_fastsearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_demand" >
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100px"
        android:background="@android:color/black" 
        >

       
        <TextView
            android:id="@+id/fast_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/optional_margin_A"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:text="@string/IDS_QuXiao"
            android:textColor="@drawable/classify_custom_textview_blue_white"
            android:textSize="@dimen/font_optional_A"  />
        
         <EditText
            android:id="@+id/fast_search_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/optional_margin_A"
            android:layout_marginBottom="@dimen/optional_margin_A"
            android:paddingLeft="15dp"
            android:layout_toLeftOf="@id/fast_search_cancel"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/zq_search_page_search"
            android:drawablePadding="2dp"
            android:hint="请输入代码/名称/拼音缩写"
            android:textColorHint="#5f5f5f"
            android:textSize="14.5sp"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:background="@drawable/zq_search_page_round_kuang" />
        
    </RelativeLayout>
    
    <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/optional_margin_A"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:text="以下为历史查询记录"
            android:textColor="#212121"
            android:textSize="@dimen/font_optional_A"
            />
    <ListView 
        android:id="@+id/lv_fast_search_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
        android:divider="@null"
        >
    </ListView>
    
    <TextView
            android:id="@+id/tv_clear_history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/optional_margin_A"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:text="清除搜索记录"
            android:textColor="@drawable/classify_custom_textview_blue_white"
            android:textSize="@dimen/font_optional_A" 
            />

    <ListView 
        android:id="@+id/fast_search_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
        android:divider="@null"
        >        
    </ListView>

</LinearLayout>
