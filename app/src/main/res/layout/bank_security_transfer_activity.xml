<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_demand"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/bank_security_activity_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100px"
        android:background="@android:color/black" >

        <TextView
            android:id="@+id/header_middle_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="银衍转账 "
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_bank_A" />

        <TextView
            android:id="@+id/bank_security_header_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bank_margin_A"
            android:text="返回"
            android:clickable="true"
            android:textColor="@drawable/classify_custom_textview_blue_white"
            android:textSize="@dimen/font_optional_B"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bank_radiogroup_out_height"
        android:paddingTop="@dimen/trade_query_listview_item_padding_height"
        android:paddingBottom="@dimen/trade_query_listview_item_padding_height"
        >

        <RadioGroup
            android:id="@+id/rg_bank_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/bank_margin_A"   
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_bank_security1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_left_selected_unselected"
                android:button="@null"
                android:gravity="center"
                android:text="银行转证券 "
                android:textColor="@drawable/classify_text_selector_bank_security"
                android:textSize="@dimen/font_bank_B"
                android:textStyle="normal" />

            <RadioButton
                android:id="@+id/rb_bank_security2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_middle_selected_unselected"
                android:button="@null"
                android:gravity="center"
                android:text="证券转银行"
                android:checked="true"
                android:textColor="@drawable/classify_text_selector_bank_security"
                android:textSize="@dimen/font_bank_B"
                android:textStyle="normal" />

            <RadioButton
                android:id="@+id/rb_bank_security3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_middle_selected_unselected"
                android:button="@null"
                android:gravity="center"
                android:text="银行余额"
                android:textColor="@drawable/classify_text_selector_bank_security"
                android:textSize="@dimen/font_bank_B"
                android:textStyle="normal" />

            <RadioButton
                android:id="@+id/rb_bank_security5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_right_selected_unselected"
                android:button="@null"
                android:gravity="center"
                android:text="查询"
                android:textColor="@drawable/classify_text_selector_bank_security"
                android:textSize="@dimen/font_bank_B"
                android:textStyle="normal" />
        </RadioGroup>
    </RelativeLayout>
     <FrameLayout
        android:id="@+id/framelayout_bank"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_demand" >
    </FrameLayout>
</LinearLayout>