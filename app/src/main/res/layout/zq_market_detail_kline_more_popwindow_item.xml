<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/zq_999999" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/zq_marketinfo_detail_more_kline_listview_item_height"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/zq_999999" />

        <TextView
            android:id="@+id/tv_zq_detail_kline_popwindow_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/zq_marketinfo_detail_more_kline_listview_item_height"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/zq_all_list_item_color_selector"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/zq_414141"
            android:textSize="@dimen/zq_marketinfo_detail_font_G" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/zq_999999" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/zq_999999" />

</LinearLayout>