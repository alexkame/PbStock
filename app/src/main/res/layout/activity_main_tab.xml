<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/tabs_rg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_120px"
            android:background="@drawable/nav_unselect"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/tab_rb_d"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selecter_tab_background"
                android:button="@null"
                android:drawableTop="@drawable/qq_btn_home_selector"
                android:gravity="center|center_horizontal"
                android:singleLine="true" />

            <RadioButton
                android:id="@+id/tab_rb_a"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selecter_tab_background"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/tab_optional_btn"
                android:gravity="center|center_horizontal"
                android:singleLine="true" />

            <RadioButton
                android:id="@+id/tab_rb_b"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selecter_tab_background"
                android:button="@null"
                android:drawableTop="@drawable/tab_screen_btn"
                android:gravity="center|center_horizontal"
                android:singleLine="true" />

            <RadioButton
                android:id="@+id/tab_rb_c"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selecter_tab_background"
                android:button="@null"
                android:drawableTop="@drawable/tab_trade_btn"
                android:gravity="center|center_horizontal"
                android:singleLine="true" />

            <RadioButton
                android:id="@+id/tab_rb_e"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selecter_tab_background"
                android:button="@null"
                android:drawableTop="@drawable/tab_setting_btn"
                android:gravity="center|center_horizontal"
                android:singleLine="true" />
        </RadioGroup>
    </LinearLayout>

</TabHost>