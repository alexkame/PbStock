<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_demand"
    android:orientation="vertical" >

    <include
        android:id="@+id/trade_activity_title"
        layout="@layout/maintab_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_item_height"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/trade_margin_B"
            android:gravity="center_vertical"
            android:text="为了您的账号安全，请先验证您的手机号"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_trade_B" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_demand_one" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_item_height"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/rb_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:layout_weight="0.0"
            android:gravity="right"
            android:text="手机号码 "
            android:textColor="@color/demand_9b9b9b"
            android:textSize="@dimen/font_trade_B" />

        <EditText
            android:id="@+id/edit_register_phonenum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="left"
            android:inputType="phone"
            android:hint=""
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_B" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_demand_one" />

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/set_item_height"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/rb_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:layout_weight="0.0"
            android:gravity="right"
            android:text="验证码"
            android:textColor="@color/demand_9b9b9b"
            android:textSize="@dimen/font_trade_B" />

        <EditText
             android:id="@+id/edit_register_yzm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="left"
            android:inputType="phone"
            android:hint=""
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_B" />
        
        <com.pengbo.mhdcx.widget.TimeButton
            android:id="@+id/btn_register_hqyzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_select_and_unselect"
            android:layout_marginRight="@dimen/optional_margin_A"
             android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:contentDescription="@string/IDS_TuPianMiaoShu"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            >           
        </com.pengbo.mhdcx.widget.TimeButton>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_demand_one" />
    
    <Button
        android:id="@+id/btn_sms_verify"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/trade_margin_B"
        android:layout_marginRight="@dimen/trade_margin_B"
        android:layout_marginTop="@dimen/trade_margin_B"
        android:background="@drawable/all_blue_btn_press_selector"
        android:text="@string/IDS_QueDing"
        android:textSize="@dimen/font_trade_A" 
        android:textColor="@android:color/white"/>


</LinearLayout>