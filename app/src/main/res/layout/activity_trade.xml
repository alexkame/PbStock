<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_demand" >

    <include
        android:id="@+id/trade_activity_title"
        layout="@layout/maintab_header" />

    <LinearLayout
        android:id="@+id/out_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trade_activity_title"
        android:layout_marginTop="@dimen/trade_margin_A"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/trade_activity_linearlayout1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/trade_item_height"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:clickable="true" 
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.0"
                android:gravity="left"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:text="@string/IDS_ZhengQuanGongSi"
                android:textColor="@color/demand_9b9b9b"
                android:textSize="@dimen/font_trade_B" />

            <TextView
                android:id="@+id/trade_activity_business_hall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:text=""
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_B" />

            <ImageView
                android:id="@+id/trade_activity_image_business_hall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/trade_margin_B"
                android:contentDescription="@string/IDS_TuPianMiaoShu"
                android:src="@drawable/chevron_default" />
        </LinearLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/trade_margin_B"
            android:layout_marginRight="@dimen/trade_margin_B"/>
        
        <LinearLayout
            android:id="@+id/trade_activity_linearlayout2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/trade_item_height"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:clickable="true"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.0"
                android:gravity="left"
                android:text="@string/IDS_ZhangHuLeiXing"
                android:textColor="@color/demand_9b9b9b"
                android:textSize="@dimen/font_trade_B"
                android:layout_marginLeft="@dimen/trade_margin_B" />

            <TextView
                android:id="@+id/trade_activity_business_fund_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:layout_weight="1.0"
                android:text="@string/IDS_KeHuZhangHao"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_B" />

            <ImageView
                android:id="@+id/trade_activity_image_fund_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/trade_margin_B"
                android:src="@drawable/chevron_default" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/trade_margin_B"
            android:layout_marginRight="@dimen/trade_margin_B"/>

        <LinearLayout
            android:id="@+id/trade_activity_linearlayout3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/trade_item_height"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.0"
                android:gravity="left"
                android:text="@string/IDS_JiaoYiZhangHao"
                android:textColor="@color/demand_9b9b9b"
                android:textSize="@dimen/font_trade_B" 
                android:layout_marginLeft="@dimen/trade_margin_B"/>

            <EditText
                android:id="@+id/trade_activity_business_trade_account"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:layout_weight="1.0"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_B" />
            
            <ImageView
                android:id="@+id/btn_trade_accout_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"  
                android:background="@drawable/order_fanshou"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:gravity="center"
                android:contentDescription="@string/IDS_TuPianMiaoShu"
                />

            <ImageView
                android:id="@+id/trade_activity_image_trade_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right|center_vertical"  
                android:background="@drawable/save02"
                android:clickable="true"
                android:gravity="center"
                android:contentDescription="@string/IDS_TuPianMiaoShu"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"                
                android:layout_marginRight="@dimen/trade_margin_B"                
                android:text="@string/IDS_BaoCun" 
                android:gravity="right"
                android:textColor="@color/demand_107afd"
                android:textSize="@dimen/font_trade_C"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray" 
            android:layout_marginLeft="@dimen/trade_margin_B"
            android:layout_marginRight="@dimen/trade_margin_B"/>

        <LinearLayout
            android:id="@+id/trade_activity_linearlayout4"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/trade_item_height"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.0"
                android:gravity="left"
                android:text="@string/IDS_JiaoYiMiMa"
                android:textColor="@color/demand_9b9b9b"
                android:textSize="@dimen/font_trade_B" 
                android:layout_marginLeft="@dimen/trade_margin_B"/>

            <EditText
                android:id="@+id/trade_activity_business_trade_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:gravity="left|center_vertical"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:singleLine="true"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_A" />

            <ImageButton
                android:id="@+id/trade_activity_image_trade_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:gravity="center"
                android:layout_marginRight="@dimen/trade_margin_B"
                android:background="@drawable/edit_delete"
                android:clickable="true"
                 />
        </LinearLayout>

        <View
            android:id="@+id/view_l5"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/trade_margin_B"
            android:layout_marginRight="@dimen/trade_margin_B" />

        <LinearLayout
            android:id="@+id/trade_activity_linearlayout5"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/trade_item_height"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.0"
                android:gravity="left"
                android:text="@string/IDS_RenZhengKouLing"
                android:textColor="@color/demand_9b9b9b"
                android:textSize="@dimen/font_trade_B" 
                android:layout_marginLeft="@dimen/trade_margin_B"/>

            <EditText
                android:id="@+id/trade_activity_business_identify_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/IDS_RuMeiYouKeBuShu"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/font_trade_B" />

            <Button
                android:id="@+id/trade_activity_image_identify_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/trade_margin_B"
                android:background="@drawable/chevron_default"
                android:visibility="gone" />
        </LinearLayout>
        <View
            android:id="@+id/view_l6"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/trade_margin_B"
            android:layout_marginRight="@dimen/trade_margin_B" />

        <LinearLayout
            android:id="@+id/trade_activity_linearlayout6"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/trade_item_height"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="12dp"
                android:layout_weight="0.0"
                android:gravity="left"
                android:text="@string/IDS_YanZhengMa"
                android:textColor="@color/demand_9b9b9b"
                android:textSize="@dimen/font_trade_B" 
                android:layout_marginLeft="@dimen/trade_margin_B"/>

            <EditText
                android:id="@+id/et_phoneCodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/trade_margin_B"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/font_trade_B" />

            <ImageView
            android:id="@+id/iv_showCode"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

  
    <Button
        android:id="@+id/btn_login_trade_activity"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/out_linearlayout"
        android:layout_marginLeft="@dimen/trade_margin_B"
        android:layout_marginRight="@dimen/trade_margin_B"
        android:layout_marginTop="@dimen/trade_margin_B"
        android:background="@drawable/all_blue_btn_press_selector"
        android:text="@string/IDS_DengLu"
        android:textSize="@dimen/font_trade_A" 
        android:textColor="@android:color/white"/>

</RelativeLayout>