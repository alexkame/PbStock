<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_demand" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:baselineAligned="false"
        android:orientation="horizontal" 
        android:paddingTop="@dimen/trade_query_listview_item_padding_height"
        android:paddingBottom="@dimen/trade_query_listview_item_padding_height">

        <TextView
            android:id="@+id/tv_bankname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="ss"
            android:lines="2"
            android:textColor="@color/gray_demand_one"
            android:textSize="@dimen/font_trade_query_C" />

        <TextView
            android:id="@+id/tv_zzje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="ss"
            android:lines="2"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_query_C" />

        <TextView
            android:id="@+id/tv_yhye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="ss"
            android:lines="2"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_query_C" />

        <TextView
            android:id="@+id/tv_zzlx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="ss"
            android:lines="2"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_query_C" />
        
        <TextView
            android:id="@+id/tv_zzzt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ss"
            android:lines="2"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_query_C" />

        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_demand_one" />

</RelativeLayout>