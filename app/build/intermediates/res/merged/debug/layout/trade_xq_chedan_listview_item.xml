<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_color_bg"
    >

   <LinearLayout      
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:baselineAligned="false"        
        android:orientation="horizontal"
        android:paddingTop="@dimen/trade_query_listview_item_padding_height"
        android:paddingBottom="@dimen/trade_query_listview_item_padding_height">

       <TextView
            android:id="@+id/tv_xqcd_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00-00-00"
            android:textColor="@color/gray_demand_one"
            android:textSize="@dimen/font_trade_position_B" />

        <TextView
            android:id="@+id/tv_xqcd_optionname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:lines="2"
            android:gravity="center"
            android:text="@string/IDS_ShangHaiDaZhong"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_position_B" />
        
        <TextView
            android:id="@+id/tv_xqcd_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="@color/demand_333333"
            android:textSize="@dimen/font_trade_position_B" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_xqcd_state1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:text="@string/IDS_QueRenChengGong"
                android:textColor="@color/demand_333333"
                android:textSize="@dimen/font_trade_position_B" />

            <TextView
                android:id="@+id/tv_xqcd_state2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:text="@string/IDS_CheDan"
                android:textColor="@color/blue_demand"
                android:textSize="@dimen/font_xmid_14sp" />
        </LinearLayout>
    </LinearLayout>

    <View        
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_demand_one" />
</RelativeLayout>