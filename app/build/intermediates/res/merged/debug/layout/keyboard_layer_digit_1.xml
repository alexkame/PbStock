<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <TableLayout
        android:id="@+id/tablelayout_digit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:visibility="visible" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_digit_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="1"
                android:textSize="@dimen/font_trade_A" />

            <Button
                android:id="@+id/btn_digit_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="2"
                android:textSize="@dimen/font_trade_A" />

            <Button
                android:id="@+id/btn_digit_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="3"
                android:textSize="@dimen/font_trade_A" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_digit_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="4"
                android:textSize="@dimen/font_trade_A" />

            <Button
                android:id="@+id/btn_digit_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="5"
                android:textSize="@dimen/font_trade_A" />

            <Button
                android:id="@+id/btn_digit_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="6"
                android:textSize="@dimen/font_trade_A" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_digit_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="7"
                android:textSize="@dimen/font_trade_A" />

            <Button
                android:id="@+id/btn_digit_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="8"
                android:textSize="@dimen/font_trade_A" />

            <Button
                android:id="@+id/btn_digit_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="9"
                android:textSize="@dimen/font_trade_A" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_digit_wancheng"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/jianpan_ok"
                android:clickable="true" />

            <Button
                android:id="@+id/btn_digit_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/order_jianpan_line"
                android:text="0"
                android:textSize="@dimen/font_trade_A" />

            <ImageButton
                android:id="@+id/btn_digit_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"               
                android:background="@drawable/order_jianpan_arrow" />
        </TableRow>
    </TableLayout>
</FrameLayout>
