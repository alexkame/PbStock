<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_color_bg"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:id="@+id/item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/demand_333333"
        android:textSize="@dimen/font_optional_E"
        android:layout_centerVertical="true"
        android:singleLine="true"
         />
    
    <!-- android:padding="@dimen/trade_query_listview_item_padding_height" -->

    <ImageButton
        android:id="@+id/item_add_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/zixuan_add"
        android:contentDescription="@string/IDS_TuPianMiaoShu"
        android:focusable="false" />

    <ImageButton
        android:id="@+id/item_add_minus_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/zixuan_cut"
        android:contentDescription="@string/IDS_TuPianMiaoShu"
        android:focusable="false" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />

</RelativeLayout>