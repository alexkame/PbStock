<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setonlinetime_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100px"
        android:layout_alignParentTop="true"
        android:background="@android:color/black" >

    

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:gravity="left"
            android:text="@string/IDS_Back"
            android:textColor="@drawable/classify_custom_textview_blue_white"
            android:textSize="@dimen/font_optional_B"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="@string/IDS_QingXuanZe"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_optional_A"
            android:visibility="visible" />

</RelativeLayout>