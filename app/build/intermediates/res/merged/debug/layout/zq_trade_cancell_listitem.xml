<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/zq_trade_cd_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/zq_cc_item_drawable">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/zq_buy_idex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center" >
                </ImageView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zq_cancell_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:textColor="@color/zq_414141"
                    android:text="中国医药"
                    android:textSize="@dimen/zq_hq_size_C" >
                </TextView>

                <TextView
                    android:id="@+id/zq_cancell_item_time"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="13.5dp"
                    android:text="09:33:33"
                    android:textColor="@color/zq_414141"
                    android:textSize="@dimen/zq_hq_size_D" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zq_cancell_item_weituojia"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:gravity="right"
                android:textSize="@dimen/zq_hq_size_C"
                android:textColor="@color/blue_demand" >
            </TextView>

            <TextView
                android:id="@+id/zq_cancell_item_junjia"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
               android:paddingBottom="13.5dp"
               android:gravity="right"
                android:textSize="@dimen/zq_hq_size_C"
                android:textColor="@color/blue_demand" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zq_cancell_item_weituoliang"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:gravity="right"
                    android:textSize="@dimen/zq_hq_size_C"
                    android:textColor="@color/blue_demand" >
                </TextView>

                <TextView
                    android:id="@+id/zq_cancell_item_chengjiaoliang"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="13.5dp"
                    android:gravity="right"
                    android:textSize="@dimen/zq_hq_size_C"
                    android:textColor="@color/blue_demand" >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4" >

                <Button
                    android:id="@+id/zq_cancell_item_chedan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@drawable/zq_chedan_btn"
                    android:textColor="@color/white"
                    android:text="撤单"
                    android:textSize="@dimen/zq_hq_size_D" >
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    
        <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/zq_trade_cd_layout"
        android:background="@color/zq_ededed" />

</RelativeLayout>