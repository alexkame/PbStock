        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qq_dialog_A"
        android:layout_marginRight="@dimen/qq_dialog_A"
        android:layout_marginTop="@dimen/qq_dialog_A"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_xbig_18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qq_dialog_A"
        android:layout_marginRight="@dimen/qq_dialog_A"
        android:layout_marginTop="@dimen/qq_dialog_A"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_middle_16sp" />

    <TextView
        android:id="@+id/txt_msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qq_dialog_A"
