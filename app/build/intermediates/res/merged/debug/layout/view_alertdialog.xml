        android:layout_marginRight="@dimen/qq_dialog_A"
        android:layout_marginTop="@dimen/qq_dialog_A"
        android:background="@drawable/shape_four_biankuang_bg"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/IDS_QingShuRuXINGQUANSHULIANG"
        android:inputType="number"
        android:paddingBottom="@dimen/qq_dialog_B"
        android:paddingTop="@dimen/qq_dialog_B"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/font_middle_16sp" >
    </EditText>

    <EditText
        android:id="@+id/edit_num2"
