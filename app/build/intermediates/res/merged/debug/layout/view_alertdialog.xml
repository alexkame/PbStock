                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qq_dialog_D"
                android:layout_marginRight="@dimen/qq_dialog_D"
                android:layout_marginTop="@dimen/qq_dialog_D"
                android:gravity="center"
                android:singleLine="true"
                android:text="合约名称："
