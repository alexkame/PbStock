            android:layout_weight="1.5"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_optionnamevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qq_dialog_C"
                android:layout_marginRight="@dimen/qq_dialog_D"
                android:layout_marginTop="@dimen/qq_dialog_D"
