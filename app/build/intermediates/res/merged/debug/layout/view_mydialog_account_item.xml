<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionsheet_middle_selector"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    >
    
    
    
    <Button
        android:id="@+id/btn_account_dialog_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_red"
        android:text="@string/IDS_ShanChu"
        android:textSize="@dimen/font_trade_B" 
        android:textColor="@android:color/white"/>
    
    <TextView 
        android:id="@+id/txt_account_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/font_trade_B"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@id/btn_account_dialog_del"
        android:layout_marginRight="@dimen/trade_margin_B"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="222"
        />
    <TextView 
        android:id="@+id/txt_account_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/font_trade_B"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@id/txt_account_dialog_name"
	android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="111222222"
        />
    

</RelativeLayout>
