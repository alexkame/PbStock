<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100px"
        android:background="@android:color/black" >

        <TextView
            android:id="@+id/head_option_list_activity_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/IDS_QiQuanSouSuo"
            android:textColor="@color/background_demand"
            android:textSize="@dimen/font_optional_A"
            android:visibility="visible" />

        <TextView
            android:id="@+id/head_option_list_activity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/optional_margin_A"
            android:gravity="center"
            android:text="@string/IDS_GuanBi"
            android:textColor="@drawable/classify_custom_textview_blue_white"
            android:textSize="@dimen/font_optional_B"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>